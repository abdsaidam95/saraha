<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="-5dp"
    android:layout_marginTop="-5dp"
    android:layout_marginEnd="-5dp"
    android:layout_gravity="center"
    android:layout_marginBottom="-5dp"
    android:background="@drawable/ic_back_new"


    tools:context=".views.welcome">
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_sadfgergerg"
        app:layout_constraintBottom_toTopOf="@id/sariih"
        app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/sariih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sariiiha"
        app:layout_constraintBottom_toTopOf="@id/txtlogs"
        android:textSize="39dp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="9dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintEnd_toEndOf="@id/logo"
     />
    <TextView
        android:id="@+id/txtlogs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txtlogin"
        android:textSize="39dp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="30dp"

        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/sariih"
        app:layout_constraintStart_toStartOf="parent"
       android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/buttsign"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"


        app:layout_constraintTop_toBottomOf="@id/txtlogs"
        android:text="@string/logs_butt"
        app:layout_constraintStart_toStartOf="@id/txtlogs"
        android:textColor="#FF2D55"
        app:layout_constraintEnd_toEndOf="@id/txtlogs"/>
    <Button
        android:id="@+id/sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_coulor"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/buttsign"

        android:text="@string/sign_of_app"
        app:layout_constraintStart_toStartOf="@id/buttsign"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/buttsign"/>
    <TextView
        android:id="@+id/sign_with_sosial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_log_in"
        app:layout_constraintTop_toBottomOf="@id/sign_up"

        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/sign_up"
        app:layout_constraintEnd_toEndOf="@id/sign_up"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intent_to_face"
        android:layoutDirection="ltr"
        android:layout_width="wrap_content"

        android:padding="5dp"
        android:layout_height="wrap_content"
        android:background="#242A37"

        app:layout_constraintTop_toBottomOf="@id/sign_with_sosial"
        android:layout_marginBottom="12dp"


        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/sign_up"
        app:layout_constraintStart_toStartOf="@id/sign_up">
        <TextView
            android:id="@+id/login_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_facebook"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:text="@string/connect_to_facebook"
            app:layout_constraintStart_toEndOf="@id/login_button"
            app:layout_constraintTop_toTopOf="@+id/intent_to_face"
            app:layout_constraintBottom_toBottomOf="@id/intent_to_face"
            android:textSize="12sp"
            android:textColor="#ffffff"

            />



    </androidx.constraintlayout.widget.ConstraintLayout>









</androidx.constraintlayout.widget.ConstraintLayout>