<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242A37"
    android:fillViewport="true"
    tools:context=".views.Edit_profile_actievity">
    <ScrollView
        android:id="@+id/connnnn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:id="@+id/welcome_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profil"
                android:textColor="#F7F6F6"
                android:textSize="30sp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/arrowww"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_close"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/welcome_txt"
                android:layout_marginStart="22dp"/>

            <TextView
                android:id="@+id/ing_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:layout_marginTop="36dp"
                android:textColor="#F54B64"
                android:visibility="gone"
                android:textSize="17sp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/arrowww"
                app:layout_constraintBottom_toBottomOf="@id/arrowww"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/welcome_txt"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imdes"
                android:layout_width="200dp"
                android:layout_height="200dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/welcome_txt"/>
            <TextView
                android:id="@+id/change_pho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/imdes"
                app:layout_constraintEnd_toEndOf="@id/imdes"
                app:layout_constraintTop_toBottomOf="@id/imdes"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:textColor="#F54B64"
                android:text="@string/change_profile_phto"/>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/username"
                android:textColor="#4E586E"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/change_pho"/>
            <TextView
                android:id="@+id/editttttttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/user_name"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@id/user_name"
                android:backgroundTint="#242A37"
                android:padding="5dp"
                android:text="fefwef"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/ing_icon"/>
            <TableRow
                android:id="@+id/table20"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/user_name"/>
            <TextView
                android:id="@+id/Emails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/emai"
                android:textColor="#4E586E"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/table20"/>
            <TextView
                android:id="@+id/emailllls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/Emails"
                app:layout_constraintBottom_toBottomOf="@id/Emails"
                android:text="fefwef"
                android:backgroundTint="#242A37"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:inputType="textEmailAddress"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/editttttttt"/>
            <TableRow
                android:id="@+id/table21"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/Emails"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/phonee"
                android:visibility="gone"
                android:textColor="#4E586E"
                android:inputType="phone"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/table21"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/phone"
                app:layout_constraintBottom_toBottomOf="@id/phone"
                android:text="fefwef"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#242A37"
                android:padding="5dp"
                android:inputType="phone"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/ing_icon"/>
            <TableRow
                android:id="@+id/table22"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:visibility="gone"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/phone"/>

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/gend"
                android:visibility="gone"
                android:textColor="#4E586E"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/table22"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#242A37"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="@id/gender"
                app:layout_constraintBottom_toBottomOf="@id/gender"
                android:visibility="gone"
                android:text="fefwef"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/ing_icon"/>
            <TableRow
                android:id="@+id/table23"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:visibility="gone"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/gender"/>
            <TextView
                android:id="@+id/birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:text="@string/date_birth"
                android:textColor="#4E586E"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/table23"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/birth"
                app:layout_constraintBottom_toBottomOf="@id/birth"
                android:backgroundTint="#242A37"
                android:visibility="gone"
                android:padding="5dp"
                android:text="fefwef"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="@id/ing_icon"/>

            <TableRow
                android:id="@+id/tableRow"
                android:layout_width="135dp"
                android:layout_height="7dp"
                android:layout_marginTop="80dp"
                android:visibility="gone"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"

                app:layout_constraintTop_toBottomOf="@id/table24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                 />
            <TableRow
                android:id="@+id/table24"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="@id/user_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#232935"
                app:layout_constraintTop_toBottomOf="@id/birth"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8351929453534437/4967121882"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>