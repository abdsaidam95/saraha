<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#242A37"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".views.search_actevity">
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView

           android:id="@+id/welcome_txt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/serc"
           android:textColor="#F7F6F6"
           android:textSize="34sp"
           android:layout_marginTop="90dp"
           android:layout_marginStart="30dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent"/>
       <TextView
           android:id="@+id/rggggg"
           android:layout_width="27dp"
           android:layout_height="27dp"
           android:background="@drawable/ic_close_copy"
           app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="25dp"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="8dp"
           app:layout_constraintBottom_toTopOf="@id/welcome_txt"
           android:textAlignment="center"/>
       <SearchView
           android:id="@+id/search1"
           android:layout_width="340dp"
           android:layout_height="wrap_content"
           android:queryHint="@string/serc"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           android:layout_marginTop="25dp"
           android:searchIcon="@drawable/ic_search"
           app:layout_constraintTop_toBottomOf="@id/welcome_txt"
           android:background="@drawable/search2_style"/>
       <TableRow
           android:id="@+id/view"
           android:layout_height="1dp"
           android:layout_width="0dp"
           app:layout_constraintTop_toBottomOf="@id/search1"
           android:layout_marginTop="20dp"
           app:layout_constraintStart_toStartOf="parent"
           android:background="#000000"
           app:layout_constraintEnd_toEndOf="parent"/>
       <TextView

           android:id="@+id/txt222222"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/recent_sea"
           android:textColor="#F7F6F6"
           android:textSize="20sp"
           android:layout_marginTop="20dp"

           app:layout_constraintTop_toBottomOf="@id/view"
           app:layout_constraintStart_toStartOf="@id/welcome_txt"/>
       <TextView
           android:id="@+id/clear_all"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/clear_al"
           android:textColor="#F54B64"
           app:layout_constraintTop_toTopOf="@id/txt222222"
           app:layout_constraintBottom_toBottomOf="@id/txt222222"
           app:layout_constraintEnd_toEndOf="@id/search1"/>
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycl_for_search"
           android:layout_width="0dp"
           android:layout_height="320dp"
           android:layout_marginTop="20dp"
           app:layout_constraintEnd_toEndOf="@id/clear_all"
           app:layout_constraintStart_toStartOf="@id/txt222222"
           app:layout_constraintTop_toBottomOf="@id/txt222222">
       </androidx.recyclerview.widget.RecyclerView>
       <TableRow
           android:layout_height="7dp"
           android:layout_width="135dp"
           android:background="#FFFFFF"

           android:layout_marginBottom="12dp"
           app:layout_constraintBottom_toBottomOf="parent"

           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           />














   </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.core.widget.NestedScrollView>