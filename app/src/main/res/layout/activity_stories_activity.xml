<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.stories_activity">
        <ImageView
            android:id="@+id/imggggg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#242A37"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profiles"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/imggggg"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"


            app:layout_constraintTop_toTopOf="@id/imggggg"

            android:background="@drawable/ic_oval"/>
        <TextView
            android:id="@+id/txtttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_profiles"
            android:layout_marginStart="20dp"
            android:text="fhghgfh"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/img_profiles"
            app:layout_constraintBottom_toBottomOf="@id/img_profiles"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/img_profiles"
            app:layout_constraintStart_toStartOf="@id/txtttt"
            android:textSize="15dp"
            android:textColor="#FFFFFF"

            android:text="212"/>
        <TextView
            android:id="@+id/xclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_profiles"
            app:layout_constraintBottom_toBottomOf="@id/img_profiles"
            android:background="@drawable/ic_cloooose"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <EditText
            android:id="@+id/edit"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:background="@drawable/draw_1"
            app:layout_constraintBottom_toTopOf="@id/table"
            app:layout_constraintStart_toStartOf="@id/img_profiles"
            app:layout_constraintEnd_toEndOf="parent"
            android:fitsSystemWindows="true"


            android:layout_marginTop="40dp"

            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:hint="write comment ......"
            android:textAlignment="center"




            android:textColorHint="#FFFFFF"/>



        <TextView
            android:id="@+id/tvvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layoutDirection="ltr"





            android:textSize="15sp"

            android:background="@drawable/ic_plane"
            app:layout_constraintTop_toTopOf="@id/edit"
            app:layout_constraintBottom_toBottomOf="@id/edit"/>
        <TableRow
            android:id="@+id/table"
            android:layout_height="7dp"
            android:layout_width="135dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>






    </androidx.constraintlayout.widget.ConstraintLayout>








