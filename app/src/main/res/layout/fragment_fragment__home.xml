<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#242A37"
    tools:context=".Fragement.fragment_Home">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/constrain_layout"
       android:layout_width="match_parent"
       android:layout_marginBottom="15dp"

       android:layout_height="wrap_content">
       <SearchView
           android:id="@+id/search"
           android:layout_width="340dp"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="@id/constrain_layout"
           app:layout_constraintEnd_toEndOf="@id/constrain_layout"
           android:layout_marginTop="40dp"
           android:searchIcon="@drawable/ic_search"
           app:layout_constraintTop_toTopOf="@id/constrain_layout"
           android:background="@drawable/search_style"/>
      <HorizontalScrollView
          android:id="@+id/scroll"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/search"
          app:layout_constraintStart_toStartOf="@id/search"
          app:layout_constraintEnd_toEndOf="@id/search"
          android:fillViewport="true"


          android:scrollbars="none"

          android:layout_marginTop="25dp">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/constrain"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <Button
                  android:id="@+id/button_stories"
                  android:layout_width="58dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/ic_stories"
               app:layout_constraintTop_toTopOf="@id/constrain"
                  app:layout_constraintStart_toStartOf="@id/constrain"

                  android:layout_marginTop="25dp"
                  android:layout_marginStart="12dp"
                 />
              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/recycle_stories"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"

                  android:layout_marginEnd="6dp"
                  app:layout_constraintStart_toEndOf="@id/button_stories"
                  app:layout_constraintTop_toTopOf="@id/constrain"



                  app:layout_constraintEnd_toEndOf="@id/constrain"


                  app:layout_constraintBottom_toBottomOf="@id/constrain"
                  >




              </androidx.recyclerview.widget.RecyclerView>

          </androidx.constraintlayout.widget.ConstraintLayout>

      </HorizontalScrollView>
       <TextView
           android:id="@+id/discover"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="@id/scroll"
           app:layout_constraintTop_toBottomOf="@id/scroll"

           android:layout_marginStart="15dp"
           android:layout_marginTop="30dp"
           android:text="@string/disco"
           android:textColor="#FFFFFF"
           android:textSize="34sp"
           />
       <TextView
           android:id="@+id/view_all"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintTop_toTopOf="@id/discover"
           app:layout_constraintBottom_toBottomOf="@id/discover"
           app:layout_constraintEnd_toEndOf="@id/csroll"
           android:layout_marginStart="15dp"
           android:textSize="15sp"
           android:textColor="#F54B64"
           android:text="@string/viewall"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/csroll"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="10dp"
           android:layout_marginTop="20dp"
           app:cardBackgroundColor="#242537"
           app:layout_constraintBottom_toBottomOf="parent"
           app:cardElevation="8dp"

           app:cardCornerRadius="8dp"
           android:paddingBottom="15dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="30dp"
           android:background="#242A37"
           android:fillViewport="true"


           app:layout_constraintEnd_toEndOf="@id/scroll"

           app:layout_constraintStart_toStartOf="@id/scroll"
           app:layout_constraintTop_toBottomOf="@id/discover">
           <androidx.core.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginBottom="20dp"
               android:fillViewport="true">
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/constrain_scroll"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="@id/csroll"

                   android:foreground="?android:attr/selectableItemBackground"
                   app:layout_constraintStart_toStartOf="@id/csroll"
                   app:layout_constraintTop_toTopOf="@id/csroll">

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/recycle_home_parent"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:layout_constraintEnd_toEndOf="parent"
                       android:paddingBottom="12dp"
                       app:layout_constraintStart_toStartOf="@id/constrain_scroll"
                       app:layout_constraintTop_toTopOf="@id/constrain_scroll" />
               </androidx.constraintlayout.widget.ConstraintLayout>



           </androidx.core.widget.NestedScrollView>




       </androidx.cardview.widget.CardView>













   </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>