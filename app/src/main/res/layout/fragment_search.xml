<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#242A37"
    android:fillViewport="true"

    tools:context=".Fragement.searchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:id="@+id/search1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/search2_style"
            android:queryHint="@string/serc"
            android:searchIcon="@drawable/ic_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_txt" />

        <TableRow
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search1" />

        <TableRow
            android:layout_width="135dp"
            android:layout_height="7dp"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"

            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView

            android:id="@+id/welcome_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"


            android:text="@string/serc"
            android:textColor="#F7F6F6"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/rggggg"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_close_copy"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/welcome_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/txt222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/newuser"
            android:textColor="#F7F6F6"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="@id/welcome_txt"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear_al"
            android:textColor="#F54B64"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/txt222222"
            app:layout_constraintEnd_toEndOf="@id/search1"
            app:layout_constraintTop_toTopOf="@id/txt222222" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycl_for_search"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"

            android:layout_marginTop="20dp"

            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/adView"

            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt222222">

        </androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycl_for_search_of_any_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toTopOf="@id/adView"
            app:layout_constraintEnd_toEndOf="parent"


            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recycl_for_search">

        </androidx.recyclerview.widget.RecyclerView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-8351929453534437/4967121882"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycl_for_search"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.core.widget.NestedScrollView>