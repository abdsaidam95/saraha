<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="#242A37"
    tools:context=".Fragement.My_profile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/part_constarin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ing_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_groub"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"

            app:layout_constraintTop_toTopOf="@id/part_constarin"
            app:layout_constraintEnd_toEndOf="@id/part_constarin"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profiles"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@id/part_constarin"
            android:layout_marginStart="20dp"

            android:layout_marginTop="60dp"

            app:layout_constraintTop_toTopOf="@id/part_constarin"

            />
        <TextView
            android:id="@+id/txtttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/img_profiles"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="13dp"
            android:text="fhghgfh"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@id/img_profiles"
            app:layout_constraintBottom_toBottomOf="@id/img_profiles"/>
        <TextView
            android:id="@+id/tex232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"


            app:layout_constraintBottom_toBottomOf="@id/img_profiles"
            app:layout_constraintStart_toStartOf="@id/txtttt"
            android:text="234"
            android:textSize="15dp"
            android:textColor="#485164"/>
        <TextView
            android:id="@+id/txt10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="234"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/txtttt"
            app:layout_constraintTop_toBottomOf="@id/tex232"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/txet12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txt10"
            app:layout_constraintBottom_toBottomOf="@id/txt10"
            android:layout_marginStart="12dp"
            android:visibility="gone"
            android:textSize="15sp"
            android:textColor="#454E63"
            app:layout_constraintStart_toEndOf="@id/txt10"
            android:text="@string/followg"/>
        <TextView
            android:id="@+id/txt11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/txt15"
            android:layout_marginEnd="12dp"
            android:text="234"

            app:layout_constraintTop_toTopOf="@id/txet12"

            android:textSize="15sp"
            android:textColor="#FFFFFF"
            />
        <TextView
            android:id="@+id/txt15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/txt11"
            app:layout_constraintBottom_toBottomOf="@id/txt11"
            android:layout_marginStart="12dp"
            android:textSize="15sp"
            android:textColor="#454E63"
            app:layout_constraintEnd_toEndOf="@id/ing_icon"

            android:text="@string/followr"/>
        <TableRow
            android:id="@+id/table_1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="@id/part_constarin"
            app:layout_constraintEnd_toEndOf="@id/part_constarin"
            android:layout_marginTop="20dp"
            android:background="#1E2432"
            app:layout_constraintTop_toBottomOf="@id/txet12"/>
        <TextView
            android:id="@+id/link_of_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/table_1"
            android:layout_marginEnd="30dp"
            android:textSize="17sp"
            android:textAlignment="center"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="@+id/table_1"
            android:textColor="#ffffff"
            android:text="dfbfdbfdbfdbfdbfdb"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@+id/table_1"
            app:layout_constraintStart_toStartOf="@+id/table_1"/>
        <TextView
            android:id="@+id/phots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="@string/photo"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/img_profiles"
            app:layout_constraintTop_toBottomOf="@id/table_1"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/res"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/phots"
            app:layout_constraintEnd_toEndOf="@id/txt15"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@id/img_profiles"/>
        <TextView
            android:id="@+id/current_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_message"
           android:layout_marginTop="28dp"
            android:textColor="#FFFFFF"
            android:textSize="29sp"
          app:layout_constraintStart_toStartOf="@id/res1"
            app:layout_constraintTop_toBottomOf="@id/res"
           />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/res1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/current_msg"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/adView"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="20dp"




            app:layout_constraintStart_toStartOf="@id/img_profiles"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            app:adSize="BANNER"
            app:adUnitId="ca-app-pub-8351929453534437/4967121882"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/res1" />




    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>