<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"

    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdhfgghg"
        android:layout_marginStart="20dp"
        android:textColor="#4E586E"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/imgg"
        app:layout_constraintBottom_toBottomOf="@id/imgg"
        app:layout_constraintStart_toEndOf="@id/imgg"
        />
    <TextView
        android:id="@+id/teeext2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/date1"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textAlignment="textStart"
        android:paddingTop="8dp"


        android:padding="7dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        android:text="للللللللللللللللل"/>
    <TableRow
        android:id="@+id/table_row"
        android:layout_height="37dp"
        android:background="#F78361"


        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/teeext2"
        app:layout_constraintTop_toBottomOf="@id/imgg"
        app:layout_constraintTop_toTopOf="@+id/teeext2"
        app:layout_constraintEnd_toStartOf="@id/teeext2"
        android:layout_marginEnd="14dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="2dp"/>
    <TextView
        android:id="@+id/replay1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/teeext2"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="@string/repy"
        android:textSize="15sp"
        android:textColor="#F54B64"
        app:layout_constraintStart_toStartOf="@id/date1"
        />
    <TextView
        android:id="@+id/share1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/replay1"
        android:layout_marginStart="27dp"
        android:text="@string/shar"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="#5AC8FA"
        app:layout_constraintStart_toEndOf="@id/date1"
        />
    <TableRow
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="@id/replay1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rrrrrrrrescld"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rrrrrrrrescld"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/teeext2"
        app:layout_constraintTop_toBottomOf="@id/table_row"


        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/teeext2"
       >








    </androidx.recyclerview.widget.RecyclerView>






</androidx.constraintlayout.widget.ConstraintLayout>