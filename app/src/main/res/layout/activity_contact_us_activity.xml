<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242A37"
    tools:context=".views.contact_us_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/subject"
        android:text="@string/contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/subject"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/ic_rec"

        app:layout_constraintBottom_toBottomOf="parent"


        android:textColorHint="#FFFFFF"
        android:hint="subject"
        android:paddingEnd="20dp"

        android:textAlignment="textStart"
        android:paddingStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/subject"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/titllle"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/ic_rec"
        android:layout_marginTop="32dp"
        android:paddingEnd="20dp"

        android:hint="Message:"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"

        android:textAlignment="textStart"
        android:paddingStart="25dp"

        app:layout_constraintTop_toBottomOf="@id/subject"
        app:layout_constraintStart_toStartOf="@id/subject"
        app:layout_constraintEnd_toEndOf="@id/subject"/>


    <Button
        android:id="@+id/sedtoemail"
        android:layout_width="0dp"

        android:layout_height="44dp"
        android:background="@drawable/button_coulor"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/titllle"
        app:layout_constraintStart_toStartOf="@id/titllle"
        app:layout_constraintEnd_toEndOf="@id/titllle"

        android:text="send"
        android:textColor="#FFFFFF"
        />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8351929453534437/4967121882"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>