<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/consssr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"




    android:background="#242A37"

    tools:context=".views.comment_actevity">

    <ScrollView
        android:id="@+id/sdddff"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:fillViewport="true"
        android:layout_marginBottom="20dp"


        app:layout_constraintBottom_toTopOf="@id/edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome_txt" />


            <TextView

                android:id="@+id/welcome_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/masage_recive"
                android:textColor="#F7F6F6"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/arrow"
                app:layout_constraintTop_toBottomOf="@id/arrow" />


            <TextView
                android:id="@+id/arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rescycle_comment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"

                app:layout_constraintBottom_toTopOf="@id/adView"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/welcome_txt"
                app:layout_constraintTop_toBottomOf="@id/view">


            </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-8351929453534437/4967121882"
                app:layout_constraintBottom_toBottomOf="parent"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rescycle_comment" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <EditText
        android:id="@+id/edit"
        android:layout_width="290dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/sdddff"
        android:layout_marginBottom="22dp"
        android:visibility="gone"


        android:layout_marginEnd="30dp"

        android:background="@drawable/draw_1"
        android:hint="write comment ......"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/table"
        app:layout_constraintEnd_toEndOf="parent"



        app:layout_constraintStart_toStartOf="parent"
         />
    <TextView
        android:id="@+id/tvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_plane"

        android:textSize="15sp"


        app:layout_constraintBottom_toBottomOf="@id/edit"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit"
        app:layout_constraintTop_toTopOf="@id/edit" />
    <TableRow
        android:id="@+id/table"
        android:layout_width="135dp"
        android:layout_height="7dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />









</androidx.constraintlayout.widget.ConstraintLayout>














