<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"

   >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        android:background="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/datessss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fdhfgghg"
        android:layout_marginStart="20dp"

        android:textColor="#4E586E"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="@id/imgg"
        app:layout_constraintBottom_toBottomOf="@id/imgg"
        app:layout_constraintStart_toEndOf="@id/imgg"
        />
    <TableRow
        android:id="@+id/table_row"
        android:layout_height="37dp"
        android:layoutDirection="ltr"

        android:background="#F78361"

        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@+id/teeext"
        app:layout_constraintBottom_toBottomOf="@+id/teeext"
        android:layout_marginEnd="14dp"
       app:layout_constraintEnd_toStartOf="@id/teeext"
        app:layout_constraintTop_toBottomOf="@id/imgg"


        android:layout_width="2dp"/>
    <TextView
        android:id="@+id/teeext"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/datessss"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textAlignment="center"

        android:padding="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="مرحححححح"/>
    <TextView
        android:id="@+id/replay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgeemassage"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/repy"
        app:layout_constraintEnd_toEndOf="@id/teeext"

        android:textSize="20sp"
        android:textColor="#F54B64"
        app:layout_constraintStart_toStartOf="@id/datessss"
        />
    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/replay"
        android:layout_marginStart="40dp"
        android:text="@string/shar"
        android:visibility="gone"
        android:textSize="15sp"
        android:textColor="#5AC8FA"
      app:layout_constraintStart_toEndOf="@id/datessss"
        />
    <TableRow
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintStart_toStartOf="@id/datessss"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit"/>
    <EditText
        android:id="@+id/edit"
        android:layout_width="290dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/replay"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layoutDirection="ltr"
        android:background="@drawable/draw_1"
        android:hint="@string/write_comment"
        android:textAlignment="center"
        android:textColorHint="#FFFFFF"


        app:layout_constraintEnd_toEndOf="parent"



        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"

        android:layoutDirection="ltr"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_plane"

        android:textSize="15sp"


        app:layout_constraintBottom_toBottomOf="@id/edit"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit"
        app:layout_constraintTop_toTopOf="@id/edit" />
    <ImageView
        android:id="@+id/imgeemassage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toEndOf="@id/imgg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teeext"/>






</androidx.constraintlayout.widget.ConstraintLayout>