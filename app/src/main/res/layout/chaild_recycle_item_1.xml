<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="13dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txt_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="DFDASFFDGFDGFDGFDGDFGDF"/>
    <TableRow
        android:id="@+id/table_row"
        android:layout_height="37dp"
        android:layoutDirection="ltr"

        android:background="#F78361"
        android:layout_marginTop="25dp"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="@id/txt_child"
        app:layout_constraintTop_toBottomOf="@id/txt_child"
        android:layout_width="2dp"/>
    <TextView
        android:id="@+id/txxxxst"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/table_row"


        android:layout_marginStart="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:layout_marginEnd="20dp"
        android:hint="الرد على السؤال"
        android:padding="12dp"

        app:layout_constraintStart_toStartOf="@id/table_row"
        app:layout_constraintTop_toTopOf="@id/table_row"/>

</androidx.constraintlayout.widget.ConstraintLayout>