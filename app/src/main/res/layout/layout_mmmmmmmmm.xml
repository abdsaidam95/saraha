<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_searchsssss"
        android:layout_width="60dp"
        android:layout_height="60dp"

        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:id="@+id/txt44"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/img_searchsssss"
        android:layout_marginStart="20dp"
        android:padding="6dp"
        android:textAlignment="center"
        android:layout_marginEnd="25dp"

        app:layout_constraintEnd_toStartOf="@id/textsetlisner"
        android:textSize="14sp"

        app:layout_constraintTop_toTopOf="@id/img_searchsssss"
        app:layout_constraintBottom_toBottomOf="@id/img_searchsssss"
        android:text="dfgdfgdfg"/>
    <TextView
        android:id="@+id/textsetlisner"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:background="@drawable/button_coulor"
        app:layout_constraintTop_toTopOf="@id/img_searchsssss"
        app:layout_constraintBottom_toBottomOf="@id/img_searchsssss"
        android:text="@string/show"
        android:textAlignment="center"
        android:paddingTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TableRow
        android:id="@+id/view"
        android:layout_height="1dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/txt44"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/img_searchsssss"
        android:layout_marginStart="20dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>