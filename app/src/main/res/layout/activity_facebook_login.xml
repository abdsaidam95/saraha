<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242A37"
    tools:context=".views.Facebook_regster">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <Button
                android:id="@+id/sign_up_data"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_coulor"
                android:text="@string/sign_of_app"

                android:textColor="#FFFFFF"

                app:layout_constraintEnd_toEndOf="@+id/data_bairth"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/data_bairth"
                app:layout_constraintTop_toBottomOf="@+id/data_bairth"
                app:layout_constraintVertical_bias="0.338" />

            <EditText
                android:id="@+id/user_namessssss"
                android:layout_width="315dp"
                android:layout_height="44dp"
                android:layout_marginTop="52dp"
                android:background="@drawable/ic_rec"
                android:hint="@string/name"


                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"


                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome_txt" />

            <EditText
                android:id="@+id/Email_register"
                android:layout_width="315dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_rec"


                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"


                android:textAlignment="textStart"
                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/user_namessssss"
                app:layout_constraintStart_toStartOf="@+id/user_namessssss"
                app:layout_constraintTop_toBottomOf="@id/user_namessssss" />

            <EditText
                android:id="@+id/nikename"
                android:layout_width="315dp"
                android:layout_height="44dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/ic_rec"
                android:hint="@string/nicknme"
                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"
                android:textColorHint="#FFFFFF"
                android:visibility="gone"


                app:layout_constraintEnd_toEndOf="@+id/Email_register"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/Email_register"
                app:layout_constraintTop_toBottomOf="@id/Email_register"
                tools:layout_editor_absoluteY="426dp" />

            <EditText
                android:id="@+id/data_bairth"
                android:layout_width="315dp"
                android:layout_height="44dp"

                android:layout_marginTop="32dp"
                android:background="@drawable/ic_rec"
                android:hint="@string/contry"

                android:paddingStart="25dp"
                android:paddingEnd="20dp"
                android:textAlignment="textStart"

                android:textColorHint="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/Email_register"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/nikename"
                app:layout_constraintTop_toBottomOf="@+id/Email_register" />

            <EditText
                android:id="@+id/data_pass"
                android:layout_width="315dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"

                android:layout_marginBottom="20dp"
                android:background="@drawable/ic_rec"
                android:hint="@string/passss"
                android:inputType="textPassword"
                android:paddingStart="25dp"
                android:textAlignment="textStart"


                android:textColorHint="#FFFFFF"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/Email_register"
                app:layout_constraintStart_toStartOf="@id/Email_register"
                app:layout_constraintTop_toBottomOf="@id/data_bairth" />

            <EditText
                android:id="@+id/data_pho"
                android:layout_width="315dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_rec"
                android:hint="@string/confrm_password"


                android:inputType="textPassword"
                android:padding="8dp"
                android:paddingStart="25dp"
                android:textAlignment="textStart"


                android:textColorHint="#FFFFFF"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/Email_register"
                app:layout_constraintStart_toStartOf="@id/Email_register"
                app:layout_constraintTop_toBottomOf="@id/data_pass" />

            <ImageView
                android:id="@+id/bbbbbbbbbb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/welcome_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="135dp"
                android:layout_height="7dp"
                android:layout_marginBottom="12dp"
                android:background="#FFFFFF"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/sign_up_data"
                app:layout_constraintStart_toStartOf="@id/sign_up_data" />

            <TextView

                android:id="@+id/welcome_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="@string/create_account"
                android:textColor="#F7F6F6"
                android:textSize="34sp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_close"
                android:layoutDirection="ltr"
                app:layout_constraintBottom_toTopOf="@id/welcome_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ttttt"
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_agree"
                android:textAlignment="center"
                android:textColor="#4C4A68"
                android:layout_marginTop="20dp"
                android:textSize="12sp"

                app:layout_constraintTop_toBottomOf="@+id/sign_up_data"

                app:layout_constraintBottom_toTopOf="@+id/tableRow2"
                app:layout_constraintEnd_toEndOf="@+id/sign_up_data"
                app:layout_constraintStart_toStartOf="@+id/sign_up_data" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>